<div class="row">
	<div class="col-lg-1"></div>
    <div class="col-lg-10">
        <h4>Status for <a href="/<%= @key %>">/<%= @key %></a></h4><br>
        <div class="row">
        <canvas id="myChart" width="auto" height="auto"></canvas>
        </div><br>
        <p><%= @vals[2] %> views in total.</p>
	</div>
	<div class="col-lg-1"></div>
</div>

<script>
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: <%= @keys[3..(@keys.length - 1)] %>,
        datasets: [{
            data: <%= @vals[3..(@vals.length - 1)].map(&:to_i) %>
        }]
    }
});
</script>